{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "dist",
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "lib": ["es2016"],
    "resolveJsonModule": true,
    "declaration": true,
    "strict": false,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["node"]
    // "sourceMap": true
  },
  "include": ["src/**/*.ts"]
}
